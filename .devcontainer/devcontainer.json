{
  "name": "egonym_homework-dev",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": [
    "pip install -r requirements.txt || true"
  ]
}

    