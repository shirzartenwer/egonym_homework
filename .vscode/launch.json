{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--input", "./input_images/",
                "--output", "./output_images/",
                "--rect", "10", "10", "100", "100",
                "--blur_kernel", "15"
            ]
        },
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/python3",
            "args": [
                "${workspaceFolder}/run_pipeline.py",
                "--input", "./input_images/",
                "--output", "./output_images/",
                "--rect", "10", "10", "100", "100",
                "--blur_kernel", "15"
            ],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}